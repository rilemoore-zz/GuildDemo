<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Page7"
             BackgroundColor="Transparent"
             Title="Event Creation">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent">
            <Label 
                x:Name="a"
                Text="Event Creation"
                HeightRequest="100"
                VerticalOptions="Start" 
                HorizontalOptions="Center" 
                TextColor="#38393a"
                >
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform ="Android" Value="Mairon.ttf#Mairon"/>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <Entry
                x:Name="EventTitle"
                HorizontalTextAlignment="Center"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Placeholder="Enter Event Title"
                PlaceholderColor="#A00000"
                BackgroundColor="Transparent"
                MaxLength="300" 
                WidthRequest="300"
                />
            <DatePicker x:Name="Datepick" Format="yyyy/dd/mm">
                
            </DatePicker>
           
            <TimePicker x:Name="TimePick" HorizontalOptions="Center">
                
            </TimePicker>



            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">

                


                <Entry
                x:Name="Game"
                Placeholder="Enter Game"
                PlaceholderColor="#A00000"
                BackgroundColor="Transparent"
                HorizontalTextAlignment="Center"
                MaxLength="100" 
                WidthRequest="100"
                />

                <Entry
                x:Name="Platform"
                Placeholder="Enter Platform"
                PlaceholderColor="#A00000"
                BackgroundColor="Transparent"
                HorizontalTextAlignment="Center"
                MaxLength="100" 
                WidthRequest="100"/>

                <Entry
                x:Name="NumPlayers"
                Placeholder="Number of Players"
                PlaceholderColor="#A00000"
                BackgroundColor="Transparent"
                HorizontalTextAlignment="Center"
                MaxLength="100" 
                WidthRequest="100"
                />

                <Picker x:Name="PublicPicker" Title="Public or Private">
                    <Picker.Items>
                        <x:String>Private</x:String>
                        <x:String>Public</x:String>
                    </Picker.Items>
                </Picker>

                <Button Text="Create Event" Clicked="Handle_Clicked" CornerRadius="50" BackgroundColor="#d1eefc" Opacity="1" WidthRequest="250">
                    <Button.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="Mairon.ttf#Mairon"/>
                        </OnPlatform>
                    </Button.FontFamily>
                </Button>

            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
   
</ContentPage>