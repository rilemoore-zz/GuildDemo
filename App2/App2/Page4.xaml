                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="Mairon.ttf#Mairon"/>
                        </OnPlatform>
                    </Button.FontFamily>
                </Button>
                
                <Button
                x:Name="Roll_D3"
                Text="D3"
                TextColor="Brown"
                VerticalOptions="CenterAndExpand" 
