                </Button>
                
                <Button
                x:Name="Roll_D10"
                Text="D10"
                TextColor="Brown"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Clicked="D10"
                     BackgroundColor="#d1eefc"
                />
                <Button
                x:Name="Roll_D12"
                Text="D12"
                TextColor="Brown"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Clicked="D12" BackgroundColor="#d1eefc"
                >
                    <Button.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="Mairon.ttf#Mairon"/>
