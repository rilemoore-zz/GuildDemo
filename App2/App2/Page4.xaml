                    </Button.FontFamily>
                </Button>
                
                <Entry
                x:Name="Min"
                Text=""
                Placeholder="Enter a minimum"
                Keyboard="Numeric"

                />
                <Button
                x:Name="Roll_Custom"
                Text="Roll Custom Dice"
                TextColor="Brown"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Clicked="Custom"
                     BackgroundColor="#d1eefc"
                >
                    <Button.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="Mairon.ttf#Mairon"/>
                        </OnPlatform>
                    </Button.FontFamily>
                </Button>
                
                <Entry
                x:Name="Max"
                Text=""
                Placeholder="Enter a maximum"
                Keyboard="Numeric"
                    
                />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>