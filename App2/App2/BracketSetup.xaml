<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Transparent"
             x:Class="App2.BracketSetup"
             Title="Bracket Generator"
             x:Name="parent">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent">

            <Picker Title="Select Tournament Format"
                    x:Name="Dropdown"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                BackgroundColor="Transparent"
                    TextColor="DarkRed"
                WidthRequest="350">
                <Picker.Items>
                    
                    <x:String>Double Elimination</x:String>
                    <x:String>Single Elimination</x:String>
                    <x:String>Round Robin</x:String>
                    <x:String>Swiss</x:String>
                </Picker.Items>
            </Picker>

            <Entry Placeholder="Number of players"
                   Text=""
                   TextColor="DarkRed"
                   HorizontalTextAlignment="Center"></Entry>

            <Entry Placeholder="Player Name"
                   Text="Player 1"
                HorizontalTextAlignment="Center"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                PlaceholderColor="#A00000"
                BackgroundColor="Transparent"
                MaxLength="350" 
                WidthRequest="350"
                   TextColor="DarkRed"
                   x:Name="Player0">
            </Entry>

            <Entry Placeholder="Player Name"
                   Text="Player 2"
                HorizontalTextAlignment="Center"
